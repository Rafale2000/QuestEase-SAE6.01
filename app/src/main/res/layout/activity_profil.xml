<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil">
    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/connexion_icon"
            android:layout_marginTop="-60dp"
            android:layout_marginBottom="-50dp"
            app:tint="?attr/texte"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="25dp"
            />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="placeholder"
            android:textSize="@dimen/text_size_xlarge"
            android:gravity="center"
            android:textColor="?attr/texte"
            android:textStyle="bold"
            android:drawableTint="?attr/colorOnPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp" />
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/playedGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de parties jouées : "
            android:textStyle="bold"
            android:textColor="?attr/texte"
            android:textSize="@dimen/text_size_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/wonGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de parties gagnées :"
            android:textColor="?attr/texte"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/disconnectButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Déconnexion"
            android:textColor="@color/white"
            android:backgroundTint="?attr/exitButton"
            />

        <Button
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Supprimer le compte (RGPD friendly)"
            android:textColor="@color/white"
            android:backgroundTint="?attr/exitButton"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>