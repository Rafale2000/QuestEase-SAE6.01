<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Searchlobby">

    <LinearLayout
        android:id="@+id/banniere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Le fragment prend tout l'espace restant grâce à layout_weight -->
        <fragment
            android:id="@+id/toolbar_fragment"
            android:name="com.example.questease.ToolbarFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- ImageView et TextView s'affichent en wrap_content à droite -->
        <ImageView
            android:id="@+id/connexion"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/connexion_icon"
            app:tint="?attr/texte"
            android:background="?attr/colorPrimary"
            android:visibility="visible" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="placeholder"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/text_size_medium"
            app:tint="?attr/texte"
            android:background="?attr/colorPrimary"
            android:gravity="center"
            android:layout_marginEnd="5dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/creerLobby"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banniere">

        <LinearLayout
            android:id="@+id/layoutlobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttontest1"
                android:layout_width="290dp"
                android:layout_height="100dp"
                android:backgroundTint="?attr/colorButtonBackground2"
                android:text="lobby de arirou"
                android:textAlignment="center"
                android:textColor="?attr/colorButtonText"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold|italic"
                android:visibility="gone"
                app:cornerRadius="24dp"
                app:icon="@drawable/baseline_person_24"
                app:iconPadding="0dp"
                app:iconSize="40dp"
                app:iconTint="@android:color/black" />
        </LinearLayout>

    </ScrollView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/creerLobby"
        android:layout_width="290dp"
        android:layout_height="100dp"
        android:backgroundTint="?attr/colorButtonBackground"
        android:text="Créer un lobby"
        android:textAlignment="center"
        android:textColor="?attr/colorButtonText"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold|italic"
        app:cornerRadius="24dp"
        app:icon="@drawable/baseline_person_24"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>